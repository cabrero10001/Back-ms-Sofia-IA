# ── OpenAI ─────────────────────────────────────────
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4.1-mini"

# ── MongoDB Atlas (RAG) ──────────────────────────
MONGODB_URI="mongodb+srv://..."
MONGODB_DB="sofia"
MONGODB_COLLECTION="rag_documents"
MONGODB_VECTOR_INDEX="vector_index_float32_ann"
RAG_DEBUG_ENDPOINTS=true

# ── RAG Config ────────────────────────────────────
RAG_EMBED_MODEL="text-embedding-3-small"
RAG_EMBED_DIM=1064
RAG_CHUNK_SIZE=255
RAG_CHUNK_OVERLAP=50
RAG_TOPK=20
RAG_RERANK_ENABLED=true
RAG_RERANK_TOP_K=5
RAG_OPENAI_TEMPERATURE=0.3
RAG_CANDIDATE_TOPK=30
RAG_FINAL_K=5
RAG_SCORE_THRESHOLD=0.72
RAG_RERANK_MODE="cosine"
RAG_FILTER_SOURCE="consultorio_juridico"
RAG_FILTER_VERSION=""
RAG_TEMPERATURE=0.3

# ── Timeouts / resiliencia ──────────────────────────
RAG_OPENAI_TIMEOUT_S=30
RAG_OPENAI_CONNECT_TIMEOUT_S=5
RAG_OPENAI_READ_TIMEOUT_S=25
RAG_OPENAI_WRITE_TIMEOUT_S=25
RAG_OPENAI_POOL_TIMEOUT_S=5
RAG_OPENAI_MAX_RETRIES=2

MONGO_SERVER_SELECTION_TIMEOUT_MS=5000
MONGO_SOCKET_TIMEOUT_MS=20000
MONGO_CONNECT_TIMEOUT_MS=5000
MONGO_TLS_CA_FILE=""
MONGO_TLS_ALLOW_INVALID_CERTS=false
